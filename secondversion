```{r}
#b)
f.obj.2 <- c(1,1)
f.con.2 <- matrix (c(1,1,3,-2,0,1,1,0,2,1,0,1), nrow = 6, byrow = TRUE)
f.dir.2 <- c(">=",">=","<=","<=",">=",">=")
f.rhs.2 <- c(1,-6,4,6,0,0)
lp2 <- lp("max", f.obj.2,f.con.2,f.dir.2,f.rhs.2) 
#Optimal value
lp2
#Optimal solution
lp2$solution
